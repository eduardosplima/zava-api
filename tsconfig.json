{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext",

    "plugins": [
      {
        "transform": "./transformers/strip-decorators.transformer.ts",
        "decorators": ["HttpLoggerDEV"],
        "includeSources": ["controller.ts"]
      }
    ]
  }
}
